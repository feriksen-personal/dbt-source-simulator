{
  "name": "dbt-source-simulator",
  "image": "python:3.11-slim",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": false,
      "upgradePackages": false
    },
    "ghcr.io/devcontainers-extra/features/starship:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mssql",
        "evidence-dev.sqltools-duckdb-driver"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "sqltools.connections": [
          {
            "name": "Azure SQL - jaffle_shop",
            "driver": "MSSQL",
            "server": "feriksen-jaffledb-dev.database.windows.net",
            "port": 1433,
            "database": "jaffle_shop",
            "username": "demo_admin",
            "password": "!QAZmoment22",
            "mssqlOptions": {
              "encrypt": true,
              "trustServerCertificate": true
            }
          },
          {
            "name": "Azure SQL - jaffle_crm",
            "driver": "MSSQL",
            "server": "feriksen-jaffledb-dev.database.windows.net",
            "port": 1433,
            "database": "jaffle_crm",
            "username": "demo_admin",
            "password": "!QAZmoment22",
            "mssqlOptions": {
              "encrypt": true,
              "trustServerCertificate": true
            }
          },
          {
            "name": "Azure SQL - master",
            "driver": "MSSQL",
            "server": "feriksen-jaffledb-dev.database.windows.net",
            "port": 1433,
            "database": "master",
            "username": "sqladmin",
            "password": "!QAZmoment22",
            "mssqlOptions": {
              "encrypt": true,
              "trustServerCertificate": true
            }
          }
        ]
      }
    }
  },
  "postCreateCommand": ".devcontainer/post-create.sh",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/root/.config/gh,type=bind,consistency=cached"
  ]
}
